{
    "workspaces": [
        "packages/*",
        "demos/*"
    ],
    "private": true,
    "packageManager": "yarn@4.6.0",
    "description": "monorepo for react-use-audio-player",
    "author": "E-Kuerschner",
    "repository": {
        "type": "git",
        "url": "https://github.com/E-Kuerschner/useAudioPlayer"
    },
    "scripts": {
        "lint": "tsc --noEmit",
        "prepublishOnly": "echo 'TODO prepare'",
        "preversion": "yarn packages/react-use-audio-player/test && yarn build",
        "release": "yarn version && yarn publish --non-interactive && echo 'Remember to push new commit/tags to Github'"
    },
    "devDependencies": {
        "husky": "^3.1.0",
        "prettier": "^3.4.2",
        "typescript": "^5.7.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint"
        }
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 80,
        "semi": false,
        "trailingComma": "none"
    }
}
